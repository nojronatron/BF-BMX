<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Font Properties -->
    <FontFamily x:Key="DefaultFont">Segoe UI Variable</FontFamily>
    <FontStyle x:Key="DefaultFontStyle">Normal</FontStyle>
    <FontWeight x:Key="DefaultFontWeight">Light</FontWeight>
    <FontWeight x:Key="MediumFontWeight">Medium</FontWeight>

    <FontFamily x:Key="ConsoleFontFamily">Consolas</FontFamily>
    <FontStyle x:Key="ConsoleFontStyle">Normal</FontStyle>
    <FontWeight x:Key="ConsoleFontWeight">Normal</FontWeight>

</ResourceDictionary>